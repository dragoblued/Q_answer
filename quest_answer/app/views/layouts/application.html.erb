<!DOCTYPE html>
<html>
  <head>
    <title>QuestAnswer</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class = "container">
     <ul class="nav">
      <li class="nav-item">
        <a class="nav-link active" href="<%= posts_path%>">Все вопросы</a>
      </li> 
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_user_session_path%>">Вход</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_user_registration_path%>">Регистрация</a>
        </li>
      <% end %>
      <li class="nav-item">
        <a class="nav-link" href="<%= new_post_path%>">Новый вопрос</a>
      </li>
     </ul>
  </div>
  <div class="container main"> 
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, message| %>
          <div class="alert <%= bootstrap_class_for(name) %>">
            <button class="close" data-dismiss="alert">&times</button>
            <%= message %>
          </div>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </div>
  </body>
</html>
