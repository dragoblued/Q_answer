<%= form_for @post do |f|%>
	<div class="form-group">
		<%= f.label 'Введите тему вопроса: ' %>
		<%= f.text_field :title, class: 'form-control'%>
	</div>
	<div class="form-group">
		<%= f.submit 'Сохранить', class: 'btn btn-primary' %>
		<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%>
	</div>
<% end %>